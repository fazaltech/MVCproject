            </div>
            <div class="form-group">
                <input type="text" name="unit_stock" id="unit_stock" class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50" />
            </div>
            <div class="form-group">
                <input type="text" name="unit_price" id="unit_price" class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50" />
            </div>
            <div class="form-group">
                <input type="text" name="discount_percentage" id="discount_percentage" class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50" />
            </div>
            <div class="form-group">
                <input type="text" name="record_level" id="record_level" class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50" />
            </div>
