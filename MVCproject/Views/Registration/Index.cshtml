        <!-- DataTales Example -->

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row"><div class="col-sm-12 col-md-6">
                                             <div class="dataTables_length" id="dataTable_length">
                                                 @using (Html.BeginForm("Index", "Registration", FormMethod.Get))
                                                 {
                                                 <label>Roles:@Html.DropDownList("roles", (SelectList)ViewBag.Role, "Select Role", new { @class = " form-control form-control-sm"})</label><label style="padding-left: 12px;">Name:<input type="search" id="user_name" name="user_name" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label><label style="padding-left: 12px;"><input type="submit" class="btn btn-primary btn-user btn-block" value="Search"></label>
                                                 }</div></div></div>
                        
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>  @Html.DisplayNameFor(model => model.user_name)</th>
                                            <th> @Html.DisplayNameFor(model => model.fullname)</th>
                                            <th> @Html.DisplayNameFor(model => model.designation)</th>
                                            <th> @Html.DisplayNameFor(model => model.role)</th>
                                            <th> @Html.DisplayNameFor(model => model.email_id)</th>
                                            <th> Assign Role</th>
                                            <th> Action</th>

                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>  @Html.DisplayNameFor(model => model.user_name)</th>
                                            <th> @Html.DisplayNameFor(model => model.fullname)</th>
                                            <th> @Html.DisplayNameFor(model => model.designation)</th>
                                            <th> @Html.DisplayNameFor(model => model.role)</th>
                                            <th> @Html.DisplayNameFor(model => model.email_id)</th>
                                            <th> Assign Role</th>
                                            <th> Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(model => item.user_name)</td>
                                                <td> @Html.DisplayFor(model => item.fullname)</td>
                                                <td>@Html.DisplayFor(model => item.designation)</td>
                                                <td>@Html.DisplayFor(model => item.role)</td>
                                                <td>@Html.DisplayFor(model => item.email_id)</td>
                                                <td>@Html.ActionLink("Assign Role", "AssignRole", new { id = item.id })</td>
                                                <td><a href="@Url.Action("AssignRole", "Registration", new { id = item.id })"><i class="fas fa-edit"></i></a> <a href="@Url.Action("AssignRole", "Registration", new { id = item.id })"><i class="fas fa-trash"></i></a></td>


                                            </tr>
                                            
}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    </div>
</body>
</html>


