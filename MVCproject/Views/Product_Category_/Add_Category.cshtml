@model MVCproject.Models.tblproductcategory

@{
    ViewBag.Title = "Add Product Category";
}



<div class="card mb-4" style="width: 1002px;">
    <div class="card-header">
       Add Product Category
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
            
               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
              
                    <input type="text" name="procat" id="procat"  class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50"/>
                </div>


                        <input type="submit" value="Insert" class="btn btn-primary btn-user btn-block" />
                   
            </div>
        }
    </div>
</div>








