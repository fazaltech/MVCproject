@model MVCproject.Models.tblproductcategory

@{
    ViewBag.Title = "Edit";
}

<h2>Update Product Category</h2>

<div class="card mb-4" style="width: 1002px;">
    <div class="card-header">
        Update Product Category
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">

                <input type="text" name="preprocat" id="preprocat" class="form-control form-control-user" value="@(ViewBag.preprocatname ?? String.Empty)"  disabled />
            </div>
            <div class="form-group">

                <input type="text" name="procated" id="procated" class="form-control form-control-user" onkeypress="return /[a-z\s]/i.test(event.key)" maxlength="50" />
            </div>

            <div class="text-center">
                <input type="submit" value="Update" class="btn btn-primary btn-user btn-block" />

                @*<p class="alert-danger">@ViewBag.chk</p>*@

            </div>


        </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@if (ViewBag.MessageED != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.MessageED");
            };


    </script>
    Response.Redirect("~/Product_Categories/Index");
}